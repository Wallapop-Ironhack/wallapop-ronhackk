<div class="row justify-content-center mt-5 pt-5">
  <div class="col-12 col-md-4">
    <h1 class="mb-3">Profile</h1>
    <div class="card">
      <div class="card-body">
        <div class="input-group mb-1">
          <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
          <input type="text" value="{{user.name}}" name="name" class="form-control {{#if errors.name}}is-invalid{{/if}}"
            placeholder="{{currentUser.name}}">
          {{#if errors.name}}<div class="invalid-feedback">{{errors.name}}</div>{{/if}}
        </div>
        <div class="input-group mb-1">
          <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
          <input type="email" value="{{user.email}}" name="email"
            class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="{{currentUser.email}}">
          {{#if errors.email}}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}
        </div>
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
          <input type="password" value="{{user.password}}" name="password"
            class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="****">
          {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
        </div>
        <div class="d-grid">
          <a href="/users/edit" class="btn btn-outline-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill"
              viewBox="0 0 16 16">
              <path
                d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z">
            </svg>
            Edit
          </a>
        </div>
      </div>
    </div>
  </div>
</div>