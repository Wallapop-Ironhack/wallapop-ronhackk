<div class="row justify-content-center mt-5 pt-5">
  <div class="col-12 col-md-4">
    <h1 class="mb-3">Profile Edit</h1>
    <div class="card">
      <div class="card-body">
        <form action="/users/{{currentUser.id}}" method="POST">
          <div class="input-group mb-1">
            <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
            <input type="text" value="{{currentUser.name}}" name="name" class="form-control">
          </div>
          <div class="input-group mb-1">
            <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
            <input type="email" value="{{currentUser.email}}" name="email" class="form-control">
          </div>
          <div class="input-group mb-1">
            <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
            <input type="address" value="{{currentUser.address}}" name="address" class="form-control">
          </div>
           <div class="input-group mb-1">
            <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
            <input type="telephone" value="{{currentUser.telephone}}" name="telephone" class="form-control">
          </div>
           <div class="input-group mb-1">
            <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
            <input type="age" value="{{currentUser.age}}" name="age" class="form-control">
          </div>
          <div class="input-group mb-2">
            <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
            <input type="password" value="{{user.password}}" name="password"
              class="form-control" placeholder="introduce your password">
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg" class="border border-primary" style="background-color: #26BB98">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>